<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Productos</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/css/login.css">

</head>
<body>
<div id="header" class="section">
    <img alt="" class="img-circle" src="/img/PandaLogo.jpg">
</div>
    <div class="container">
        <% const existeMensaje = typeof mensaje !== "undefined"%>

        <style>
            table, th, td {
                border-collapse: collapse;
            }
        </style>

        <% if (existeMensaje) {%>
            <div class="alert alert-primary" role="alert">
            <span class="font-weight-bold">
                MENSAJE
            </span> : <%= mensaje %>
            </div>
        <% }%>
        <h1><span>Administración de Productos</span><br></h1>
        <p>Administración de los diferentes productos de la panaderia en línea.</p>
        <form method="get" action="/producto/productoInicio">
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <h1 for="busqueda"><span>Busqueda</span></h1>
                        <input id="busqueda" type="text" name="busqueda" class="form-control">
                    </div>
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-outline-success btn-block" style="margin-top: 31px">
                        Buscar
                    </button>
                </div>
            </div>
        </form>

        <div class="row">
            <div class="col-sm-9">
            </div>
            <div class="col-sm-3">
                <a href="/producto/crear-producto" style="text-decoration: none">
                    <button class="btn btn-outline-success btn-block">
                        Crear Producto
                    </button>
                </a>
            </div>
        </div>

        <h1><span>Lista de Productos</span></h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="selected">Codigo Producto</th>
                    <th class="selected">Nombre</th>
                    <th class="selected">Descripcion</th>
                    <th class="selected">Stock</th>
                    <th class="selected">Precio Compra</th>
                    <th class="selected">Precio Venta</th>
                    <th class="selected">Accion</th>
                </tr>
            </thead>

            <tbody>
            <% arregloPro.forEach((producto)=> {%>
                <tr>
                    <td><%= producto.codProd %></td>
                    <td><%= producto.nombreProd %></td>
                    <td><%= producto.descripcionProd %></td>
                    <td><% producto.stock%></td>
                    <td><%= producto.precioC %></td>
                    <td><%= producto.precioV%></td>
                    <td>
                        <form action="/producto/eliminar/<%= producto.idProd%>" method="post">
                            <button class="btn btn-outline-danger btn-block" type="submit"
                                    style="margin-top: 10px; margin-bottom: 10px">
                                Eliminar
                            </button>
                        </form>
                        <a href="/producto/actualizar-producto/<%= producto.idProd%>"
                           style="text-decoration: none">
                            <button class="btn-block btn btn-outline-info">
                                Actualizar
                            </button>
                        </a>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>

        <script src="/js/jquery.js"></script>
        <script src="/js/popper.js"></script>
        <script src="/bootstrap/js/bootstrap.js"></script>
    </div>
</body>
</html>